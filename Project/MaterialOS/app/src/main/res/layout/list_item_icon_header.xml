<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/icons_header_height"
    android:paddingStart="@dimen/content_inset_less"
    android:paddingEnd="@dimen/content_inset_half">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/moreButton"
        android:fontFamily="sans-serif-medium"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/title_text_size"
        tools:text="Header Text" />

    <Button
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/content_inset_quarter"
        android:layout_marginTop="@dimen/content_inset_quarter"
        android:background="?button_accent_selector"
        android:text="@string/more"
        android:textColor="#fff"
        android:clickable="true" />

</RelativeLayout>